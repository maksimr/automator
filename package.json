{
  "name": "@maksimr/automator",
  "version": "0.1.5",
  "description": "",
  "main": "lib/Workspace.js",
  "license": "MIT",
  "files": [
    "package.json",
    "lib/"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/",
    "test:type": "tsc",
    "start": "parcel index.html --open",
    "bump": "npm version patch -m 'release: version %s' && git push && git push --tags",
    "build": "parcel build index.html"
  },
  "dependencies": {
    "parse5": "6.0.1",
    "picomatch": "2.3.0",
    "css": "3.0.0",
    "recast": "0.20.4"
  },
  "devDependencies": {
    "memfs": "3.2.2",
    "typescript": "4.3.4",
    "@types/jest": "26.0.23",
    "eslint": "7.29.0",
    "jest": "27.0.5",
    "jest-cli": "27.0.5",
    "@babel/core": "7.14.6",
    "parcel-bundler": "1.12.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "WeakMap": true,
      "Promise": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "spyOn": true,
      "expect": true
    },
    "rules": {
      "semi": "error",
      "no-undef": "error",
      "no-unused-vars": "error",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  },
  "keywords": []
}
