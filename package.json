{
  "name": "@maksimr/automator",
  "version": "0.1.3",
  "description": "",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/",
    "test:type": "tsc",
    "start": "parcel index.html --open",
    "bump": "npm version patch -m 'release: version %s' && git push && git push --tags",
    "build": "parcel build index.html"
  },
  "dependencies": {
    "parse5": "6.0.1",
    "picomatch": "2.2.2",
    "css": "3.0.0",
    "recast": "0.20.4"
  },
  "devDependencies": {
    "memfs": "3.2.0",
    "typescript": "4.1.3",
    "@types/jest": "26.0.19",
    "eslint": "7.15.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "@babel/core": "7.12.10",
    "parcel-bundler": "1.12.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "WeakMap": true,
      "Promise": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "spyOn": true,
      "expect": true
    },
    "rules": {
      "semi": "error",
      "no-undef": "error",
      "no-unused-vars": "error",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  },
  "keywords": []
}
